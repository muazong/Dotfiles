if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${():-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${():-%n}.zsh"
fi

export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="powerlevel10k/powerlevel10k"

export LANG=en_US.UTF-8
export VISUAL=nvim;
export EDITOR=nvim;
export ZSH_COMPDUMP=$ZSH/cache/.zcompdump-$HOST
export PATH=~/.nvm/versions/v22.1.0/bin:$PATH
export NVM_DIR=~/.nvm
export NVM_LAZY_LOAD=true
export NVM_COMPLETION=true

ENABLE_CORRECTION="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"

# __PLUGINS__
plugins=(
	git
	zsh-nvm
	zsh-vi-mode
  fzf-zsh-plugin 
  zsh-autocomplete
  zsh-autosuggestions
  zsh-syntax-highlighting
)

# nvm
[[ -s "$NVM_DIR/nvm.sh" ]] && source "$NVM_DIR/nvm.sh" --no-use

# Colorls
source $(dirname $(gem which colorls))/tab_complete.sh

# Zoxide
eval "$(zoxide init zsh)"

# Deno
export DENO_INSTALL="/home/azong/.deno"
export PATH="$DENO_INSTALL/bin:$PATH"

# Vi mode
ZVM_VI_INSERT_ESCAPE_BINDKEY=jk

# Yarn
export PATH="$HOME/.local/bin:\
$HOME/.yarn/bin:\
$HOME/.config/yarn/global/node_modules/.bin:\
$PATH"

# __OMZ__
source $ZSH/oh-my-zsh.sh
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# __ALIASES__
# System
alias reboot='systemctl reboot -i'
alias suspend='systemctl suspend -i'

alias x='exit'
alias cls='clear'
alias clean='sudo nala clean'
alias autoremove='sudo nala autoremove'
alias uu='sudo nala update && sudo nala upgrade'

# Zsh
alias zshconf='nvim ~/.Dotfiles/zsh/zshconf'
alias zshsource='source ~/.Dotfiles/zsh/zshconf'

# Neovim
alias v='nvim'
alias n='nvim'
alias nv='nvim'
alias vim='nvim --clean'
alias vi='nvim --clean'
alias nvc='cd ~/.Dotfiles/nvim && nvim init.lua'

# Tmux
alias tm='tmux'
alias t='tmux attach'
alias tmc='cd ~/.Dotfiles/tmux && nvim tmux.conf'

# Neofetch
alias neo='neofetch'
alias neoconf='nvim ~/.Dotfiles/neofetch/config.conf'

# Kitty terminal
alias kittyconf='nvim ~/.Dotfiles/kitty/kitty.conf'

# Colorls
alias ls='colorls'
alias la='colorls -lA --sd'
alias ll='colorls -l'
alias tree='colorls --tree'

# Bat and Fd
alias bat='batcat'
alias fd='fdfind'

# Ranger
alias r='ranger'

